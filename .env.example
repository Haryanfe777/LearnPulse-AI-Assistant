# =============================================================================
# LearnPulse AI Instructor Assistant - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Google Cloud Platform Configuration
# -----------------------------------------------------------------------------
PROJECT_ID=your-gcp-project-id
REGION=us-central1

# Local Development Only - Service Account Key
# For Cloud Run: DO NOT SET THIS - credentials are injected automatically
# GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
# Options: development, staging, production

DEBUG=false
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure random key for production!
# Python: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change-me-in-production-use-64-char-hex-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - falls back to in-memory if unavailable)
# -----------------------------------------------------------------------------
# Local Development:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cloud Run with Memorystore:
# REDIS_HOST=10.0.0.3
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# -----------------------------------------------------------------------------
# Database Column Mapping
# -----------------------------------------------------------------------------
# Map your data source columns to expected schema
STUDENT_COL=student_name
CLASS_COL=class_id
SCORE_COL=score
DATE_COL=date

# -----------------------------------------------------------------------------
# CORS Configuration (comma-separated origins)
# -----------------------------------------------------------------------------
# CORS_ORIGINS=http://localhost:8501,https://your-frontend.com

# -----------------------------------------------------------------------------
# Cloud Run Specific (set automatically by Cloud Run)
# -----------------------------------------------------------------------------
# PORT=8080  # Cloud Run sets this automatically
